generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.Char(18)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  counts Json?
}

model Playlist {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  uid   String @db.Char(18)
  name  String
  songs Json

  @@unique([uid, name])
}

model Ratio {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  text String @unique
}

model Image {
  id String @id @default(cuid())

  fileName String @unique
  size     Int
}

model Y7Image {
  id String @id @default(cuid())

  fileName String @unique
  size     Int
  width    Int    @db.Int2
  height   Int    @db.Int2
}

model Y7GIF {
  id String @id @default(cuid())

  fileName String @unique
  size     Int
  width    Int    @db.Int2
  height   Int    @db.Int2
  frames   Int    @db.Int2
}
